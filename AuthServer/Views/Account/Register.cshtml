@model RegisterViewModel
@if (Model.EnableLocalLogin)
{
    <div class="main">
        <section class="sign-up d-flex justify-content-center">
            <div class="card shadow bg-white rounded mt-5 mb-5">
                <div class="row signin-content pl-5 pr-5">
                    <div class="signin-content col-md-6">
                        <div class="form-title">
                            <h2>&nbsp;&nbsp;Sign Up</h2>
                        </div>
                        <form asp-route="Register" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form" id="register-form">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <div class="row g-3">
                                <div class="col-md">
                                    <div class="form-floating mb-3">
                                        <input class="form-control" placeholder="Username" asp-for="FirstName" autofocus>
                                        <label for="floatingInput">First Name</label>
                                        <span asp-validation-for="FirstName" class="text-danger" style="font-size:small;"></span>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="form-floating mb-3">
                                        <input class="form-control" placeholder="Username" asp-for="MiddleName" autofocus>
                                        <label for="floatingInput">Middle Name</label>
                                        <span asp-validation-for="MiddleName" class="text-danger" style="font-size:small;"></span>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="form-floating mb-3">
                                        <input class="form-control" placeholder="Username" asp-for="LastName" autofocus>
                                        <label for="floatingInput">Last Name</label>
                                        <span asp-validation-for="LastName" class="text-danger" style="font-size:small;"></span>
                                    </div>
                                </div>
                            </div>
                                <div class="col-md">
                                    <div class="form-floating mb-3">
                                        <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                                        <label for="floatingInput">Username</label>
                                        <span asp-validation-for="Username" class="text-danger" style="font-size:small;"></span>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="form-floating mb-3">
                                        <input class="form-control" placeholder="Username" asp-for="Email" autofocus>
                                        <label for="floatingInput">Email</label>
                                        <span asp-validation-for="Email" class="text-danger" style="font-size:small;"></span>
                                    </div>
                                </div>
                                <div class="col-md">
                                    <div class="form-floating">
                                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                        <label for="floatingPassword">Password</label>
                                        <span asp-validation-for="Password" class="text-danger" style="font-size:small;"></span>
                                    </div>

                                </div>
                            <div class="d-flex justify-content-center mt-3 mb-1">
                                <button class="btn login_btn" name="button" value="login">Register</button>
                            </div>
                            <partial name="_ValidationSummary" />
                        </form>
                    </div>
                    <div class="signin-image col-md-6">
                        <div class="align-middle p-3 pt-5">
                            <img src="@Url.Content(String.Format("~/Uploads/Logo/{0}", ViewBag.LogoImage))" class=" img-fluid rounded" alt="sign in image" style="width:500px;height:auto">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

}

@if (!Model.EnableLocalLogin)
{
    <div class="alert alert-warning">
        <strong>Invalid register request</strong>
        There are no register schemes configured for this client.
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}