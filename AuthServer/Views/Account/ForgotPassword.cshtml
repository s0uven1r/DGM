@model ForgotPasswordViewModel
<div class="main">
    <section class="sign-in d-flex justify-content-center">
        <div class="row col-md-12">
            <div class="card mt-2 mb-5">
                <div class="card-title mt-2">
                    <h3>Forgot Password</h3>
                </div>
                <div class="card-body">
                    <form asp-route="ForgotPassword" class="register-form mt-2" id="login-form">
                        <div class="form-floating mb-3">
                            <input class="form-control" placeholder="Username" asp-for="Email" autofocus>
                            <label for="floatingInput">Email</label>
                            <span asp-validation-for="Email" class="text-danger" style="font-size:small;"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button class="btn btn-primary" name="button" value="Submit">Submit</button>
                        </div>
                        <partial name="_ValidationSummary" />
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}