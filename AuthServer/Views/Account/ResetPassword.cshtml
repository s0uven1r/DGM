@model ResetPasswordViewModel

<div class="main">
    <section class="sign-in d-flex justify-content-center">
        <div class="row col-md-12">
            <div class="card mt-2 mb-5">
                <div class="card-title mt-2">
                    <h3>Reset password</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="ResetPassword">
                                <div class="form-floating mb-3">
                                    <input class="form-control" placeholder="Pasword" asp-for="Password" autofocus>
                                    <label for="floatingInput">Pasword</label>
                                    <span asp-validation-for="Password" class="text-danger" style="font-size:small;"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword" autofocus>
                                    <label for="floatingInput">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size:small;"></span>
                                </div>
                                <div>
                                    <input type="hidden" asp-for="Email">
                                    <input type="hidden" asp-for="Token">
                                </div>
                                <div class="form-group mt-3">
                                    <button class="btn btn-primary" name="button" value="Submit">Submit</button>
                                </div>
                                <partial name="_ValidationSummary" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}